@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <br />
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/champs.jpg"  class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Controlla le squadre ancora in gioco in Uefa Champions League.
                    <a class="btn btn-default" href="https://it.uefa.com/uefachampionsleague/clubs/">
                        Controlla
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/europa.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Controlla le squadre ancora in gioco in Uefa Europa League.
                    <a class="btn btn-default" href="https://it.uefa.com/uefaeuropaleague/clubs/">
                        Controlla
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fifa.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Controlla la squadra dell'anno.
                    <a class="btn btn-default" href="https://www.fifa.com/the-best-fifa-football-awards/best-fifa-mens-player/">
                        Controlla
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Champions League</h2>
        <ul>
            <li>Stagione 2019/2020</li>
        </ul>
        <img src="~/images/championslogo.png" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <h2>Serie A</h2>
        <ul>
            <li>Stagione 2019/2020</li>
        </ul>
        <img src="~/images/seriea.png" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <h2>Europa League</h2>
        <ul>
            <li>Stagione 2019/2020</li>
        </ul>
        <img src="~/images/eufacup.png" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <h2>Serie B</h2>
        <ul>
            <li>Stagione 2019/2020</li>
        </ul>
        <img src="~/images/serieb.png" class="img-responsive" />
    </div>
</div>
